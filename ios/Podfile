# Uncomment this line to define a global platform for your project
platform :ios, '13.0'

# Minimum deployment target for all pods
minimum_ios_version = '13.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks! :linkage => :static

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    
    # Fix for all pods with module build issues
    target.build_configurations.each do |config|
      # Set minimum iOS deployment target to 13.0 for all pods
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = minimum_ios_version
      
      # Disable the warning about quoted includes in framework headers
      config.build_settings['CLANG_WARN_QUOTED_INCLUDE_IN_FRAMEWORK_HEADER'] = 'NO'
      # Disable module debugging to prevent build errors
      config.build_settings['CLANG_ENABLE_MODULE_DEBUGGING'] = 'NO'
      # Disable module verification to prevent fatal build errors
      config.build_settings['ENABLE_MODULE_VERIFICATION'] = 'NO'
      # Allow non-modular includes in framework modules
      config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'
      
      # Additional fixes for specific pods that need module support
      if ['permission_handler_apple', 'shared_preferences_foundation', 'sqflite_darwin'].include?(target.name)
        config.build_settings['DEFINES_MODULE'] = 'YES'
        config.build_settings['CLANG_ENABLE_MODULES'] = 'YES'
        config.build_settings['SWIFT_VERSION'] = '5.0'
        # Ensure Flutter framework can be found
        config.build_settings['FRAMEWORK_SEARCH_PATHS'] ||= []
        config.build_settings['FRAMEWORK_SEARCH_PATHS'] << '$(inherited)'
        config.build_settings['FRAMEWORK_SEARCH_PATHS'] << '$(PROJECT_DIR)/../Flutter'
        # Add header search paths for Flutter
        config.build_settings['HEADER_SEARCH_PATHS'] ||= []
        config.build_settings['HEADER_SEARCH_PATHS'] << '$(inherited)'
        config.build_settings['HEADER_SEARCH_PATHS'] << '$(PROJECT_DIR)/../Flutter'
        config.build_settings['HEADER_SEARCH_PATHS'] << '$(PROJECT_DIR)/../Flutter/Flutter'
      end
    end
  end
end
